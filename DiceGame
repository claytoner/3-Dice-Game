#include <iostream>
#include <math.h>
#include <string>
#include <random>

using namespace std;


int d4 = rand() % 6+1;
int d6 = rand() % 8+1;
int d8 = rand() % 8+1;
int d10 = rand() % 10+1;
int d12 = rand() % 12+1;
int d20 = rand() % 20+1;
int d100 = rand() % 100+1;
string dicepick = NULL;

int main()
{
  cout << "Select Dice : ";
  cin >> dicepick;
  cout << "Your selection was : " << dicepick << endl;
  
  switch(dicepick)
  {
   case "d4" : cout << d4;
   break;
   case "d6" : cout << d6;
   break;
   case "d8" : cout << d8;
   break;
   case "d10" : cout << d10;
   break;
   case "d12" : cout << d12;
   break;
   case "d20" : cout << d20;
   break;
   case "d100" : cout << d100;
   break;
   default : cout << "Selected _____";
   break;
  }
  
 return 0;
}
